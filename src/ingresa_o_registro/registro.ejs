<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registro de Usuario</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <!--
    <link rel="stylesheet" href="/src/formulario_perdido/output.css" />
   -->
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">

  <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-2xl">
    <h1 class="text-2xl font-bold text-blue-600 mb-4 text-center">Registro de Usuario</h1>

    <form method="POST" action="/registrar-usuario" class="space-y-6">

      <!-- Datos de la persona -->
      <fieldset>
        <legend class="text-lg font-semibold text-gray-700 mb-2">Datos Personales</legend>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input type="text" name="nombre_pila" placeholder="Nombre de pila" required class="input" />
          <input type="text" name="apellido_paterno" placeholder="Apellido paterno" required class="input" />
          <input type="text" name="apellido_materno" placeholder="Apellido materno (opcional)" class="input" />
          <input type="email" name="correo_electronico" placeholder="Correo electrónico" required class="input" />
          <input type="text" name="telefono" placeholder="Teléfono" required class="input" />
        </div>
      </fieldset>

      <!-- Domicilio -->
      <fieldset>
        <legend class="text-lg font-semibold text-gray-700 mb-2">Domicilio</legend>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input type="text" name="calle" placeholder="Calle" class="input" />
          <input type="text" name="colonia" placeholder="Colonia" class="input" />
          <input type="text" name="codigo_postal" placeholder="Código Postal" class="input" />
        </div>
      </fieldset>

      <!-- Cuenta -->
      <fieldset>
        <legend class="text-lg font-semibold text-gray-700 mb-2">Cuenta de Plataforma</legend>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input type="text" name="nombre_usuario" placeholder="Nombre de usuario (apodo)" required class="input" />
          <input type="password" name="contrasena" placeholder="Contraseña" required class="input" />
        </div>
      </fieldset>

      <div class="text-center">
        <button type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow">
          Registrarse
        </button>
      </div>
    </form>
  </div>

  <style>
    .input {
      @apply w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400;
    }
  </style>

</body>

</html>